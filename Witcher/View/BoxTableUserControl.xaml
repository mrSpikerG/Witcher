<UserControl x:Class="Witcher.View.BoxTableUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Witcher.View"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="#282946"></Rectangle>
        <Rectangle Grid.Column="1" Fill="#373852"></Rectangle>
        <TextBlock TextWrapping="Wrap" Text="{Binding BoxName}" VerticalAlignment="Center" TextAlignment="Center" Margin="20 0" FontSize="15" Foreground="#fff" FontFamily="{StaticResource OldSoviet}"></TextBlock>
        <TextBlock TextWrapping="Wrap" Text="{Binding BoxValue}" VerticalAlignment="Center" TextAlignment="Center" Grid.Column="1" Margin="20 0" FontSize="11" Foreground="#fff" FontFamily="{StaticResource OldSoviet}"></TextBlock>
    </Grid>
</UserControl>
