<UserControl x:Class="Witcher.View.PreviewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Witcher.View"
             mc:Ignorable="d" 
             d:DesignHeight="160" d:DesignWidth="160">
    <Border Background="#283046" CornerRadius="8">
    
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="0.3*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>

            </Grid.ColumnDefinitions>

            <Image Margin="2" Source="{Binding AvatarURI}">
             
            </Image>
            <TextBlock Grid.Row="1" HorizontalAlignment="Center" FontFamily="Inter" FontSize="10" VerticalAlignment="Center" Foreground="#fff" FontWeight="Bold" Text="{Binding Name}"></TextBlock>
            <Line X1="10" Y1="130" X2="150" Y2="130" StrokeThickness="15"  Stroke="#fff" ></Line>
        </Grid>

    </Border>
</UserControl>
